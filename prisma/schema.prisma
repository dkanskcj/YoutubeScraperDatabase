// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model User {
  id Int @id @default(autoincrement())
  name String
  password String
  // 질문찾기
  findPassword passwordHint[]
  // 비밀번호 찾기 힌트 주제
  passwordHintTitle String?
  // 비밀번호 찾기 답변
  passwordHintAnswer String?
}

model passwordHint {
  id Int @id @default(autoincrement())
  user User @relation(fields: [userId], references: [id])
  userId Int
  // 질문
  authTitle String
  // 답변
  authAnswer String
}

// 동영상
model Video {
  id Int @id @default(autoincrement())
  title String
  // 썸네일
  thumbNail String
  // 장르
  category String
  // 영상 길이
  videoLength String?
  // 태그
  hashTag String?
  comments Comment[]
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  deletedAt DateTime?
}

model Comment {
  id Int @id @default(autoincrement())
  // 댓글
  content String
  name String
  password String
  video Video @relation(fields: [videoId], references: [id])
  videoId Int
  createdAt DateTime @default(now())
  updatedAT DateTime @default(now()) @updatedAt
  deletedAt DateTime?
}